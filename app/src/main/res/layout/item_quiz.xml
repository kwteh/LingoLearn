<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_quiz_question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="16dp"
        android:text="Question"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/item_quiz_answer_1_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_quiz_answer_1_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ans1"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/item_quiz_answer_2_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_quiz_question_text" />

    <TextView
        android:id="@+id/item_quiz_answer_2_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ans2"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/item_quiz_answer_3_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_quiz_answer_1_txt" />

    <TextView
        android:id="@+id/item_quiz_answer_3_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ans3"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/item_quiz_answer_4_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_quiz_answer_2_txt" />

    <TextView
        android:id="@+id/item_quiz_answer_4_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ans4"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_quiz_answer_3_txt" />

    <Button
        android:id="@+id/item_quiz_edit_btn"
        android:layout_width="110dp"
        android:layout_height="44dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="#009688"
        android:text="Edit"
        android:textColor="#FAF7F7"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/item_quiz_delete_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_quiz_question_text" />

    <Button
        android:id="@+id/item_quiz_delete_btn"
        android:layout_width="107dp"
        android:layout_height="42dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="#F60202"
        android:text="Delete"
        android:textColor="#FBF9F9"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>