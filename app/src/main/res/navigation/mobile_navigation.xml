<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.lingolearn.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/app_bar_main" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.lingolearn.ui.gallery.GalleryFragment"
        android:label="@string/menu_account"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.lingolearn.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_purchase"
        tools:layout="@layout/fragment_slideshow" />

    <activity
        android:id="@+id/nav_quiz"
        android:name="com.example.lingolearn.ui.quiz.QuizLanguageActivity"
        android:label="activity_quiz_language"
        tools:layout="@layout/activity_quiz_language" />
</navigation>