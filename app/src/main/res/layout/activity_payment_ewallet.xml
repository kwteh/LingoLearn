<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.payment.PaymentEWalletActivity">

    <TextView
        android:id="@+id/payment_ewallet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/audiowide"
        android:text="E-Wallet"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/payment_ewallet_qr"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payment_ewallet_title"
        app:srcCompat="@drawable/ewallet" />

    <TextView
        android:id="@+id/payment_ewallet_price_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="20dp"
        android:text="RM: "
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payment_ewallet_qr" />

    <Button
        android:id="@+id/payment_ewallet_cancel_btn"
        android:layout_width="119dp"
        android:layout_height="53dp"
        android:layout_marginTop="48dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="#FD0808"
        android:text="Cancel"
        android:textColor="#F1ECEC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payment_ewallet_price_txt" />

    <Button
        android:id="@+id/payment_ewallet_proceed_btn"
        android:layout_width="155dp"
        android:layout_height="53dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="#4CAF50"
        android:text="Proceed"
        android:textColor="#F1EEEE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payment_ewallet_price_txt" />

</androidx.constraintlayout.widget.ConstraintLayout>