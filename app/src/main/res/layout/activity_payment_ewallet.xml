<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.payment.PaymentEWalletActivity">

    <TextView
        android:id="@+id/payment_ewallet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-Wallet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/payment_ewallet_qr"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payment_ewallet_title"
        app:srcCompat="@drawable/ewallet" />

    <TextView
        android:id="@+id/payment_ewallet_price_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RM: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payment_ewallet_qr" />

    <Button
        android:id="@+id/payment_ewallet_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payment_ewallet_price_txt" />

    <Button
        android:id="@+id/payment_ewallet_proceed_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proceed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payment_ewallet_price_txt" />
</androidx.constraintlayout.widget.ConstraintLayout>